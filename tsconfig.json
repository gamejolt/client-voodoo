{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "lib": [
      "es6"
    ],
    "outDir": "build"
  },
  "include": [
    "src/**/*"
  ]
}
