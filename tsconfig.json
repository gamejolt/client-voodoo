{
	"compilerOptions": {
		"target": "ES2019",
		"module": "CommonJS",
		"moduleResolution": "node",
		"lib": ["ES2019", "dom"],
		"outDir": "./build",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"declaration": true,
		"typeRoots": ["node_modules/@types", "typings"],
		"newLine": "LF"
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "typings", "build"]
}
