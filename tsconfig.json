{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": ["es2015", "dom"],
		"outDir": "./build",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"declaration": true,
		"typeRoots": ["node_modules/@types", "typings"],
		"newLine": "LF"
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "typings", "build"]
}
